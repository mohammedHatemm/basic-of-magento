<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

        <table name="elshrif_loyalty_points" resource="default" engin="innodb" comment="Customr Loyakty point Balance">

<!--            // primary key in the table-->
            <column xsi:type="int" name="entity_id" nullable="false" identity="true" comment="Entity Id"/>
<!--            // the cstomer id in the table-->
                <column  xsi:type="int" name="customer_id" nullable="false" identity="true" comment="Customer Id"/>
                <column xsi:type="int" name="points_balance" nullable="false" default="0" comment="Points Balance"/>
            <column xsi:type="int" name="total_earned" nullable="false" default="0" comment="Total points Earned"/>
            <column xsi:type="int" name="total_spent" nullable="false" default="0" comment="Total Point Spent"/>
            <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Last Updated"/>
            <constraint xsi:type="foreign"
                        referenceId="ELSHRIF_LOYALTY_POINTS_CUSTOMER_ID"
                        table="elshrif_loyalty_points"
                        column="customer_id"
                        referenceTable="customer_entity"
                        referenceColumn="entity_id"
                        onDelete="CASCADE"
            />
            <constraint xsi:type="unique" referenceId="MYCOMPANY_LOYALTY_POINTS_CUSTOMER_UNIQUE">
                <column name="customer_id"/>
            </constraint>

        </table>
</schema>
